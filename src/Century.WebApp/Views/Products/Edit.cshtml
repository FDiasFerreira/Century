@model Century.WebApp.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit " + Model.Name;
}

<h4 style="padding-top: 30px">@ViewData["Title"] </h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">               
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="form-control" asp-items="@(new SelectList(Model.Suppliers, "Id", "Name", Model.SupplierId))">
                    <option></option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BarCode" class="control-label"></label>
                <input asp-for="BarCode" class="form-control" />
                <span asp-validation-for="BarCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityStock" class="control-label"></label>
                <input asp-for="QuantityStock" class="form-control" />
                <span asp-validation-for="QuantityStock" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PriceSales" class="control-label"></label>
                <input asp-for="PriceSales" class="form-control" />
                <span asp-validation-for="PriceSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePurchase" class="control-label"></label>
                <input asp-for="PricePurchase" class="form-control" />
                <span asp-validation-for="PricePurchase" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Image</label><br />
                <img src="~/Images/@Model.ImagePath" alt="@Model.ImagePath" style="width: 40px; height: 60px" />
            </div>

            <div class="form-group">
                <label asp-for="ImageUpload" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImageUpload">
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <!--<a class="btn btn-outline-info" href="javascript:window.history.back();">Back</a>-->
                @*//Neste código acima é para vc voltar a tela para onde estava antes, ou seja, vc pode levar
            para a tela de edição não apenas o modulo de produto, vc pode editar um produto vindo do
             fornecedor*@
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

@*//Exibe o nome do arquivo ao mudar a imagem*@
<script>
    $("#ImageUpload").change(function () {
        $("#img_nome").text(this.files[0].name);
        $("#img_nome")[0].style.display = 'block';
    });
</script>
}
