@model Century.WebApp.Models.ProductViewModel

@{
    ViewData["Title"] = "Products";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>


<hr />
<div class="row">
    <div class="col-md-4">

        @*//Este ipo de form é para permitir upload de imagens*@
        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*//Este código abaixo é para popular a lista de fornecedores do produto*@
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="form-control" asp-items="@(new SelectList(Model.Suppliers, "Id", "Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BarCode" class="control-label"></label>
                <input asp-for="BarCode" class="form-control" />
                <span asp-validation-for="BarCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityStock" class="control-label"></label>
                <input asp-for="QuantityStock" class="form-control" />
                <span asp-validation-for="QuantityStock" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PriceSales" class="control-label"></label>
                <input asp-for="PriceSales" class="form-control" />
                <span asp-validation-for="PriceSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePurchase" class="control-label"></label>
                <input asp-for="PricePurchase" class="form-control" />
                <span asp-validation-for="PricePurchase" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ImageUpload" class="control-label"></label>

                @*//Custom file é uma classe css do bootstrap para upload de imagens*@
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImageUpload" asp-for="ImageUpload">
                    <label data-browse="Search" style="width:400px" class="custom-file-label" for="ImageUpload"></label>
                    <label style="display: none" id="img_name"></label>
                </div>

                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>

            <h4>Category</h4>
            <hr />

            <partial name="_Category" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>




